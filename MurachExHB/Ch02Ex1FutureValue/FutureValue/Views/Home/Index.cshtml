@model FutureValueModel     /*--@model is the same as c# "using"--*/
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">     <!--added lang (best practices for user-friendly)-->
<head>
    <meta name="viewport" content="width=device-width" /> <!--what the user sees, content params are default to wha the device will support-->
    <title>Future Value Calculator</title>
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body>
    <h1>Future Value Calculator</h1>
    <form asp-action="Index" method="post">
        <div>
            <label asp-for="MonthlyInvestment">Monthly Invesment:</label>
            <input asp-for="MonthlyInvestment" />
        </div>
        <div>
            <label asp-for="YearlyInterestRate">Yearly Interest Rate:</label>
            <input asp-for="YearlyInterestRate" />
        </div>
        <div>
            <label asp-for="Years">Number of Years:</label>
            <input asp-for="Years" />
        </div>
        <div>
            <label>Future Value:</label>
            <input value=" @ViewBag.FV.ToString("c2")" readonly /> <!--"c2" is curency w/2 dec places-->
        </div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </form>
</body>
</html>
